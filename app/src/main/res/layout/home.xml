<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom_buttons"
        android:background="@android:color/white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white">

            <LinearLayout
                android:id="@+id/image_button_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="30dp"
                android:background="@color/darkblue">

                <Switch
                    android:id="@+id/power"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:track="@drawable/bg_track"
                    android:scaleX="1.5"
                    android:scaleY="1"/>

                <Space
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/home" />

                <!-- empty view -->
                <Space
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <Button
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:background="@drawable/cobutton" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@id/image_button_layout"
                android:layout_marginStart="16dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="16dp">

                <!-- Add a line chart above Arus card view -->
                <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/line_chart"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:layout_marginBottom="10dp" />

                <!-- Menu Item 1: Arus -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardViewArus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="4dp"
                    android:layout_marginBottom="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="16dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/arus"
                            android:layout_marginEnd="8dp"/>

                        <TextView
                            android:id="@+id/textViewArusTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="20sp"
                            android:text="Arus" />

                        <!-- Add some spacing -->
                        <Space
                            android:layout_width="160dp"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/textViewArusValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="20sp"
                            android:text="" /> <!-- Empty text initially -->

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Menu Item 2: Suhu -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardViewSuhu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="4dp"
                    android:layout_marginBottom="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="16dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/suhu"
                            android:layout_marginEnd="8dp"/>

                        <TextView
                            android:id="@+id/textViewSuhuTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="20sp"
                            android:text="Suhu" />

                        <!-- Add some spacing -->
                        <Space
                            android:layout_width="170dp"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/textViewSuhuValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="20sp"
                            android:text="" /> <!-- Empty text initially -->

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Menu Item 3: Daya -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardViewDaya"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="4dp"
                    android:layout_marginBottom="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="16dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/daya"
                            android:layout_marginEnd="8dp"/>

                        <TextView
                            android:id="@+id/textViewDayaTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="20sp"
                            android:text="Daya" />

                        <!-- Add some spacing -->
                        <Space
                            android:layout_width="150dp"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/textViewDayaValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="20sp"
                            android:text="" /> <!-- Empty text initially -->

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Menu Item 4: Lux -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardViewLux"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="16dp">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:src="@drawable/lux"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:id="@+id/textViewLuxTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="20sp"
                            android:text="Lux" />

                        <!-- Add some spacing -->
                        <Space
                            android:layout_width="150dp"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/textViewLuxValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="20sp"
                            android:text="" /> <!-- Empty text initially -->

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

    <!-- Bottom Buttons -->
    <LinearLayout
        android:id="@+id/bottom_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@color/darkblue"
        android:padding="7dp">

        <Button
            android:id="@+id/btn_home"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/hbutton" />

        <Space
            android:layout_width="60dp"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btn_result"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/chartbutton" />

        <Space
            android:layout_width="60dp"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btn_control"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/cobutton" />

        <Space
            android:layout_width="60dp"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btn_profile"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/pbutton" />
    </LinearLayout>

</RelativeLayout>
